{
  "compilerOptions": {
      "strict": true,
      "noImplicitAny": true,
      "esModuleInterop": true,
      "strictNullChecks": true,
      "target": "ESNext",
      "moduleResolution": "Node",
      "module": "commonjs",
      "declaration": true,
      "isolatedModules": true,
      "noEmit": true,
      "outDir": "dist",
      "baseUrl": ".",
      "paths": {
        "@pages/*": ["pages/*"],
        "@utils/*": ["utils/*"],
        "@tests/*": ["tests/*"],
      }
  },
  "include": ["."],
  "exclude": ["node_modules"]
}